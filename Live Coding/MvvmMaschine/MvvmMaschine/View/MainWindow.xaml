<Window
    x:Class="MvvmMaschine.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MvvmMaschine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="200"
    Height="133.333"
    mc:Ignorable="d">
    <Canvas>
        <Button
            Canvas.Left="90"
            Canvas.Top="59"
            Width="75"
            Command="{Binding StoppenCommand}"
            Content="Stopp" />
        <Button
            Canvas.Left="10"
            Canvas.Top="59"
            Width="75"
            Command="{Binding StartenCommand}"
            Content="Start" />
        <Label
            Canvas.Left="110"
            Canvas.Top="31"
            Content="{Binding Maschine.Stueckzahl}" />
        <Slider
            Canvas.Left="10"
            Canvas.Top="31"
            Width="95"
            Value="{Binding Maschine.Geschwindigkeit}" />

    </Canvas>
</Window>
